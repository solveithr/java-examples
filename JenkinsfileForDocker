pipeline {
    agent any
    tools {
        maven "Maven"
        jdk "JDK17"
    }
    environment {
    		DOCKERHUB_CREDENTIALS=credentials('DockerHub_Credentials')
    }
    stages {
	stage("Move into jms-publisher") {
            steps {
                bat "cd jms-publisher"
            }
        }
        stage("Maven package jms-publisher") {
            steps {
                bat "mvn clean package"
            }
        }
        stage('Docker Build jms-publisher') {
            steps {
                bat "docker build -t $DOCKERHUB_CREDENTIALS_USR/jms-publisher-service-app:${currentBuild.number} ."
            }
        }
        stage('Docker Push jms-publisher') {
            steps {
                withDockerRegistry([credentialsId: 'DockerHub_Credentials', url: '']){
                    bat "docker push $DOCKERHUB_CREDENTIALS_USR/jms-publisher-service-app:${currentBuild.number}"
                }
            }
        }
	
	stage("Move into jms-subscriber") {
            steps {
                bat "cd ../jms-subscriber"
            }
        }
        stage("Maven package jms-subscriber") {
            steps {
                bat "mvn clean package"
            }
        }
        stage('Docker Build jms-subscriber') {
            steps {
                bat "docker build -t $DOCKERHUB_CREDENTIALS_USR/jms-subscriber-service-app:${currentBuild.number} ."
            }
        }
        stage('Docker Push jms-subscriber') {
            steps {
                withDockerRegistry([credentialsId: 'DockerHub_Credentials', url: '']){
                    bat "docker push $DOCKERHUB_CREDENTIALS_USR/jms-subscriber-service-app:${currentBuild.number}"
                }
            }
        }
    }
    post {
        always {
          bat "docker logout"
        }
    }
}