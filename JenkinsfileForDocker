pipeline {
    agent any
    tools {
        maven "Maven"
        jdk "JDK17"
    }
    environment {
    		DOCKERHUB_CREDENTIALS=credentials('DockerHub_Credentials')
    }
    stages {
	stage("build and push jms-publisher") {
            steps {
                bat """
			cd jms-publisher
			mvn clean package
                	docker build -t $DOCKERHUB_CREDENTIALS_USR/jms-publisher-service-app:${currentBuild.number} .
		""".stripIndent().trim()
		
                	withDockerRegistry([credentialsId: 'DockerHub_Credentials', url: '']){
                    		bat "docker push $DOCKERHUB_CREDENTIALS_USR/jms-publisher-service-app:${currentBuild.number}"
                	}
            }
        }
	stage("build and push jms-subscriber") {
            steps {
                bat """
			cd jms-subscriber
			mvn clean package
			docker build -t $DOCKERHUB_CREDENTIALS_USR/jms-subscriber-service-app:${currentBuild.number} .
		    """.stripIndent().trim()
			withDockerRegistry([credentialsId: 'DockerHub_Credentials', url: '']){
                    		bat "docker push $DOCKERHUB_CREDENTIALS_USR/jms-subscriber-service-app:${currentBuild.number}"
                	}
            }
        }
    }
    post {
        always {
          bat "docker logout"
        }
    }
}