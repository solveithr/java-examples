pipeline {
    agent any
    tools {
        maven "Maven"
        jdk "JDK17"
    }
    environment {
    		DOCKERHUB_CREDENTIALS=credentials('DockerHub_Credentials')
    }
    stages {
	stage("do Docker login") {
            steps {
                bat "echo ${DOCKERHUB_CREDENTIALS_PSW}| docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin docker.io"
            }
        }
	stage("build and push jms-publisher") {
            steps {
                bat """
			cd jms-publisher
			mvn clean package
			dir
                	docker build -t $DOCKERHUB_CREDENTIALS_USR/jms-publisher-service-app:${currentBuild.number} .
			docker push $DOCKERHUB_CREDENTIALS_USR/jms-publisher-service-app:${currentBuild.number}
		""".stripIndent().trim()
            }
        }
	stage("build and push jms-subscriber") {
            steps {
                bat """
			cd jms-subscriber
			mvn clean package
			dir
			docker build -t $DOCKERHUB_CREDENTIALS_USR/jms-subscriber-service-app:${currentBuild.number} .
			docker push $DOCKERHUB_CREDENTIALS_USR/jms-subscriber-service-app:${currentBuild.number}
		    """.stripIndent().trim()
            }
        }
    }
    post {
        always {
          bat "docker logout"
        }
    }
}